%
% Imports an eps file to make a figure
%
% \exfig[Filename_prefix]{figure number} imports a file called Filename_prefix-#.eps
%
\newcommand{\exfig}[2][Figs]{
\hspace{0.1cm}\newline
\begin{center}
\includegraphics{#1-#2}
\end{center}
}

% Starts a new section on a new page and resets the equation numbering
%
\newcommand{\newsection}[1]{
    \clearpage
    \setcounter{equation}{0}
    \section{#1}
}

% Redefines the equation numbering to be section.number in arabic format
\renewcommand{\theequation}{
    \thesection.\arabic{equation}
}

%Marginal Notes

% A quick figure command \figure{filename/label}{caption}
\newcommand{\fig}[3][t]{
    \begin{figure}[#1]
        \centering
        \includegraphics{#2}
        \caption{\protect #3} \label{#2}
    \end{figure}
}

% Warnings are in bold font with a suitable marginal picture
\newcommand{\warning}[2][warning]{
\begin{samepage}
    \bigskip
    \marginpar[
        \vspace{0.0cm}
        \includegraphics{warning}
    ]{
        \vspace{0.0cm}
        \hfill
        \includegraphics{warning}
    }{
        \bf #2
        \bigskip}
\end{samepage}
}

% Keypoints are in italics with a left or right arrow depending on the margin
\newcommand{\keypoint}[2][keypoint]{
\begin{samepage}
    \bigskip
    \marginpar[
        \vspace{0.0cm}
        \includegraphics{keypointl}
    ]{
        \vspace{0.0cm}
        \hfill
        \includegraphics{keypointr}
    }{
        \it #2 \bigskip}
\end{samepage}
 }

% Ponders are things to think about. Normal text with a question mark in the margin
\newcommand{\ponder}[2][ponder]{
\begin{samepage}
    \bigskip
    \marginpar[
        \vspace{0.0cm}
        \includegraphics{ponder}
    ]{
        \vspace{0.0cm}
        \hfill
        \includegraphics{ponder}
    }{
        #2 \bigskip}
\end{samepage}
}


